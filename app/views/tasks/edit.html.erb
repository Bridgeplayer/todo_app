<% flash.each do |key, value| %>
   <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class = "container">
	<div class = "row">
		<div class = "col-sm-offset-2 col-sm-8">

			<h2> Edit Task </h2>

			<%= form_for @task, url: tasklist_task_path(tasklist_id: @tasklist.id, id: @task), method: :put, class: 'form-horizontal' do |f| %>

				<div class="form-group row">
					<%= f.label "Action", class: "col-sm-2 control-label"%>
					<div class="col-sm-10">
						<%= f.text_area :action, class: "form-control" %>
					</div>
				</div>
				
				<div class="form-group row">
					<%= f.label "Due_date", class: "col-sm-2 control-label"%>
					<div class="col-sm-10">
						<%= f.text_field :due_date, class: "form-control" %>
					</div>
				</div>
				
				<div class="form-group row">	
					<%= f.label "Status", class: "col-sm-2 control-label"%>
					<div class="col-sm-10">				
						<%= f.select(:status) do %>
							<% [['Cancelled', 'Cancelled'], ['To do', 'To do'], ['In progress', 'In progress'], ['Completed', 'Completed'], ].each do |c| -%>
						  	<%= content_tag(:option, c.first, value: c.last) %>
						  	<% end %>
					  	<% end %>
					</div>
				</div>
				
				<div class="form-group row">
					<%= f.label "Priority", class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
					  	<%= f.radio_button :priority, "high" %>
					  	<%= f.label :priority_high, "High" %> 

					  	<%= f.radio_button :priority, "medium" %>
					  	<%= f.label :priority_medium, "Medium" %>

					  	<%= f.radio_button :priority, "low" %>
					  	<%= f.label :priority_low, "Low" %>
					</div>
			  	</div>
				
				<div class="form-group row">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit "Update", class: "btn btn-default" %>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-sm-offset-2 col-sm-10">
						<%= link_to 'Back', tasklist_path(id: @tasklist.id), class: "btn btn-info" %>
					</div>
				</div>

			<% end %>
		</div>
	</div>
</div>