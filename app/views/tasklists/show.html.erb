<% flash.each do |key, value| %>
   <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<h2> Tasklist.id and list of related tasks</h2>

<div class = "col-md-4">
	<h2> Tasklist Show </h2>

	<table class = "table table-bordered">
		<thead>
			<tr class = "info">
				<td> Category </td>
				<td> Description </td>
			</tr>
		</thead>

		<tbody>
			<tr class>
				<td><%= @tasklist.category %></td>
				<td><%= @tasklist.description %></td>
			</tr>
		</tbody>
	</table>

	<%= link_to "Edit Tasklist", edit_tasklist_path(id: @tasklist.id), class: "btn btn-success" %>

	<%= link_to 'Back', root_path, class: "btn btn-info"%>
</div>

<div class = "col-md-2">
<!-- create space in middle -->
</div>

<div class = "col-md-6">
		<h2> Task Show </h2>

		<span class="row"> <%= link_to "New Task", new_tasklist_task_path(tasklist_id: @tasklist.id), class: "btn btn-success" %>
		</span>


<table class = "table table-bordered">
	<thead>
		<tr class = "info">
			<td> Action </td>
			<td> Due Date </td>
			<td> Status </td>
			<td> Priority </td>
			<td colspan = "2"></td>		
		</tr>
	</thead>

	<tbody>
		<% @tasklist.tasks.each do |task| %>
		<tr>
			<td><%= task.action %></td>
			<td><%= task.due_date %></td>
			<td><%= task.status %></td>
			<td><%= task.priority %></td>
			<td><%= link_to "Edit", edit_tasklist_task_path(tasklist_id: @tasklist.id, id: task.id), class: "btn btn-warning" %>
			</td>
			<td><%= link_to "Delete", tasklist_task_path(tasklist_id: @tasklist.id, id: task.id), method: :delete, class: "btn btn-danger" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>








